@page
@model Waho.Pages.Admin.Suppliers.IndexModel

@{
    ViewData["Title"] = "Index";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Waho - Sản Phẩm</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Waho.styles.css" asp-append-version="true" />
    <link href="~/css/modal.css" rel="stylesheet" asp-append-version="true" />
</head>
<body style="background: #f2f2f2">
    @*insert model*@
    <div class="modal">
        <div id="insert-modal">
            <form id="insertForm" asp-page="./Create" method="post">
                <div class="col-md-6">
                    <h4 class="text-right">Thêm nhà cung cấp mới</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <label class="labels">Tên công ty</label>
                        <input name="companyName" class="form-control input" type="text" placeholder="Nhập tên nhà cung cấp" required />
                    </div>
                    <div class="col-md-6">
                        <label class="labels">Địa chỉ</label>
                        <input name="address" class="form-control input" type="text" placeholder="Nhập địa chỉ" required />
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <label class="labels">Thành phố</label>
                        <input name="city" class="form-control input" type="text" placeholder="Nhập thành phố" required />
                    </div>
                    <div class="col-md-6">
                        <label class="labels">Khu vực</label>
                        <input name="region" class="form-control input" type="text" placeholder="Nhập khu vực" required />
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <label class="labels">Số điện thoại</label>
                        <input name="phone" class="form-control input" type="text" placeholder="Nhập số điện thoại" required />
                    </div>
                    <div class="col-md-6">
                        <label class="labels">Mã số thuế</label>
                        <input name="taxCode" class="form-control input" type="text" placeholder="Nhập mã số thuế" required />
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <label class="labels">Chi nhánh</label>
                        <input name="branch" class="form-control input" type="text" placeholder="Nhập chi nhánh" required />
                    </div>
                    <div class="col-md-6">
                        <label class="labels">Ghi chú</label>
                        <input name="description" class="form-control input" type="text" placeholder="Ghi chú" />
                    </div>
                </div>
                <div class="text-center mt-5">
                    <button id="btnSubmit" class="input-box button" type="submit" style="padding: 5px;border-radius: 5px">Thêm mới</button>
                    <button style="margin-left: 10px;padding:5px;border-radius: 5px" class="input-box button btn btn-primary profile-button" type="button" onclick="modal('insert-modal', 0, 'scale(0)')">Đóng</button>
                </div>
            </form>
        </div>
    </div>
    @*end insert model*@
    @*update model*@
    <div class="modal">
        <div id="update-modal">
            <form id="insertForm" asp-page="./Edit" method="post">
                <div class="col-md-6">
                    <h4 class="text-right">Nhà cung cấp</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <label class="labels">Tên công ty</label>
                        <input name="companyName" id="companyName" class="form-control input" type="text" placeholder="Nhập tên nhà cung cấp" required />
                        <input name="supplierID" id="supplierID" class="form-control input" type="hidden" />
                    </div>
                    <div class="col-md-6">
                        <label class="labels">Địa chỉ</label>
                        <input name="address" id="address" class="form-control input" type="text" placeholder="Nhập địa chỉ" required />
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <label class="labels">Thành phố</label>
                        <input name="city" id="city" class="form-control input" type="text" placeholder="Nhập thành phố" required />
                    </div>
                    <div class="col-md-6">
                        <label class="labels">Khu vực</label>
                        <input name="region" id="region" class="form-control input" type="text" placeholder="Nhập khu vực" required />
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <label class="labels">Số điện thoại</label>
                        <input name="phone" id="phone" class="form-control input" type="text" placeholder="Nhập số điện thoại" required />
                    </div>
                    <div class="col-md-6">
                        <label class="labels">Mã số thuế</label>
                        <input name="taxCode" id="taxCode" class="form-control input" type="text" placeholder="Nhập mã số thuế" required />
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <label class="labels">Chi nhánh</label>
                        <input name="branch" id="branch" class="form-control input" type="text" placeholder="Nhập chi nhánh" required />
                    </div>
                    <div class="col-md-6">
                        <label class="labels">Ghi chú</label>
                        <input name="description" id="description" class="form-control input" type="text" placeholder="Ghi chú" />
                    </div>
                </div>
                <div class="text-center mt-5">
                    <button id="btnSubmit" class="input-box button" type="submit" style="padding: 5px;border-radius: 5px">Lưu</button>
                    <button id="btnSubmit" class="input-box button" type="button" onclick="DeleteSupplier()" style="padding: 5px;border-radius: 5px">Xóa</button>
                    <button style="margin-left: 10px;padding:5px;border-radius: 5px" class="input-box button btn btn-primary profile-button" type="button" onclick="modal('update-modal', 1, 'scale(0)')">Đóng</button>
                </div>
            </form>
        </div>
    </div>
    @*end update model*@
    @*start filter*@
    <div style=" padding:10px;margin-top: 20px; border-radius: 10px;" class="col-lg-12">
        <form method="get" asp-page="./Index" asp-route-pageIndex="@Model.pageIndex" asp-route-pageSize="@Model.pageSize" asp-route-textSearch="@Model.textSearch" style="margin-bottom: 20px; ">
            <div class="row d-flex justify-content-between" style="width:95%">
                <div class="col-5 row">
                    <div class="form-group col-md-3">
                        <label for="inputState">Hiển thị</label>
                        <select id="inputState" class="form-control" asp-for="@Model.pageSize" onchange="this.form.submit()">
                            <option value="5"> 5 hàng</option>
                            <option value="10">10 hàng</option>
                            <option value="15">15 hàng</option>
                            <option value="20">20 hàng</option>
                        </select>
                    </div>
                    <div class="form-group col-md-9">
                        <div class="d-flex">
                            <div class="col-md-10">
                                <input type="text" asp-for="textSearch" class="w-100" placeholder="Nhập thông tin tìm kiếm" style="margin-top: 20px; border-top-left-radius: 5px; border-bottom-left-radius: 5px;padding: 5px 10px 5px 10px;border-width:1px; border-color:lightgray">
                            </div>
                            <div class="col-md-2">
                                <button class="input-box button" type="submit" style="border-top-right-radius: 5px; border-bottom-right-radius: 5px;padding: 5px 10px 5px 10px; margin-top: 20px">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-2">
                    <button style="padding: 5px 15px 5px 15px;border-radius: 5px;text-align: center; margin-top: 20px" class="input-box button" type="button" onclick="modal('insert-modal', 0, 'scale(1)');">
                        <i class="bi " asp-page="Create"> Thêm mới</i>
                    </button>
                </div>
                <div class="form-group col-md-2">
                    <button style="padding: 5px 15px 5px 15px;border-radius: 5px;text-align: center; margin-top: 20px" class="input-box button" type="submit">
                        <a class="bi " style="text-decoration: none; color: white" asp-page="./ExportSuppliers">
                            Export Excel
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-download" viewBox="0 0 16 16">
                                <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z" />
                                <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z" />
                            </svg>
                        </a>
                    </button>
                </div>
            </div>
        </form>
    </div>
    @*end filter*@
    @if (Model.message != null)
    {
        <div id="notification" class="w-50 alert alert-danger">@Model.message</div>
    }
    @if (Model.successMessage != null)
    {
        <div id="notificationSuccess" class="w-50 alert alert-success">@Model.successMessage</div>
    }
    <div class="col-lg-12" style="overflow-x: auto; background-color: #fff; border-radius: 10px; padding:10px;margin-left:10px">
        @if (Model.TotalCount > 0)
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            Tên công ty
                        </th>
                        <th>
                            Địa chỉ
                        </th>
                        <th>
                            Thành phố
                        </th>
                        <th>
                            Khu vực
                        </th>
                        <th>
                            Số điện thoại
                        </th>
                        <th>
                            Mã số thuế
                        </th>
                        <th>
                            Chi nhánh
                        </th>
                        <th>
                            Ghi chú
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Supplier)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CompanyName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Region)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TaxCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Branch)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                <a onclick="getSupplierDetail(@(item.SupplierId))">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                        <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                                    </svg>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-center mt-5">
                <div class="pagination">
                    <ul class="pagination">
                        @if (Model.pageIndex > 1)
                        {
                            <li class="page-item"><a class="page-link link-paging" asp-page="./Index" asp-route-pageIndex="@(Model.pageIndex - 1)" asp-route-pageSize="@Model.pageSize" asp-route-textSearch="@Model.textSearch">Trước</a></li>
                        }
                        @for (int i = 1; i <= Math.Ceiling(Model.TotalCount / (double)Model.pageSize); i++)
                        {
                            <li class="page-item @(Model.pageIndex == i ? "active" : "") link-active"><a class="page-link link-paging" asp-page="./Index" asp-route-pageIndex="@i" asp-route-pageSize="@Model.pageSize" asp-route-textSearch="@Model.textSearch">@i</a></li>
                        }
                        @if (Model.pageIndex < Math.Ceiling(Model.TotalCount / (double)Model.pageSize))
                        {
                            <li class="page-item"><a class="page-link link-paging" asp-page="./Index" asp-route-pageIndex="@(Model.pageIndex + 1)" asp-route-pageSize="@Model.pageSize" asp-route-textSearch="@Model.textSearch">Sau</a></li>
                        }
                    </ul>
                </div>
            </div>
        }
        else
        {
            <div class="text-center">Không có phiếu kiểm hàng nào</div>
        }
    </div>
    <script>
        // product details
        function getSupplierDetail(supplierID) {
            $.ajax({
                url: "/Admin/Suppliers/Details",
                type: "GET",
                data: { supplierID: supplierID },
                success: function (data) {
                    // Gán dữ liệu vào các trường của form
                    $("#supplierID").val(data.supplierId);
                    $("#companyName").val(data.companyName);
                    $("#address").val(data.address);
                    $("#city").val(data.city);
                    $("#region").val(data.region);
                    $("#phone").val(data.phone);
                    $("#taxCode").val(data.taxCode);
                    $("#branch").val(data.branch);
                    $("#description").val(data.description);
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.log(textStatus, errorThrown);
                },
                beforeSend: function (xhr) {
                    xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded; charset=UTF-8');
                }
            });
            modal('update-modal', 1, 'scale(1)')
        }
        //delete Supplier
            function DeleteSupplier() {
                var supplierID = $("#supplierID").val().toString();
                if (confirm("Bạn có chắc chắn muốn xóa khách hàng này không?")) {
                    $.ajax({
                        url: '/Admin/Suppliers/Delete',
                        type: 'GET',
                        data: { supplierID: supplierID },
                        success: function (data) {
                            // handle success
                            alert("xóa thành công khách hàng ra khỏi danh sách");
                            window.location.reload();
                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                            console.log(textStatus, errorThrown);
                        }
                    });
                }
            }
    </script>
    <script src="../../../admin/js/tabler.min.js" defer></script>
    <script src="../../../admin/js/demo.min.js" defer></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.12.0/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.0/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
