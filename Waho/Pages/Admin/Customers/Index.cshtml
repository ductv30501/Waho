@page
@model Waho.Pages.Admin.Customers.IndexModel

@{
    ViewData["Title"] = "Index";
}

@*start filter*@
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Waho - Khách hàng</title>
    <link href="~/css/modal.css" rel="stylesheet" />
</head>
<body class="bg-waho-white">
    @*insert model*@
    <div class="modal">
        <div id="insert-modal">
            <form id="insertCustomerForm" asp-page="./Create" method="post">
                <div class="row form-container py-4 mb-3">
                    <div class="m-auto">
                        <div>
                            <h4>Thêm khách hàng</h4>
                            <hr />
                        </div>
                        <div class="row">
                            <div class="form-group col-6">
                                <label class="control-label">Tên khách hàng</label>
                                <div class="input-group">
                                    <span class="input-group-text span-input-primary" id="basic-addon1"><i class="bi bi-tags-fill"></i></span>
                                    <input class="form-control" id="customer-name" name="name"/>
                                </div>
                            </div>
                            <div class="form-group col-6">
                                <label class="control-label">Số điện thoại</label>
                                <div class="input-group">
                                    <span class="input-group-text span-input-primary" id="basic-addon1"><i class="bi bi-telephone-fill"></i></span>
                                    <input type="number" class="form-control" id="customer-phone" name="phone"/>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-6">
                                <label class="control-label">Ngày sinh</label>
                                <div class="input-group">
                                    <span class="input-group-text span-input-primary" id="basic-addon1"><i class="bi bi-calendar-fill"></i></span>
                                    <input type="date" class="form-control" id="customer-dob" name="dob"/>
                                </div>
                            </div>
                            <div class="form-group col-6">
                                <label class="control-label">Email</label>
                                <div class="input-group">
                                    <span class="input-group-text span-input-primary" id="basic-addon1"><i class="bi bi-envelope-at-fill"></i></span>
                                    <input type="email" class="form-control" id="customer-email" name="email"/>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-6">
                                <label class="control-label">Phân loại</label>
                                <div class="input-group">
                                    <span class="input-group-text span-input-primary" id="basic-addon1"><i class="bi bi-person-badge-fill"></i></span>
                                    <select id="option-primary" class="form-select" name="type">
                                        <option value="-1" class="text-center"> ----- Chọn loại khách hàng -----</option>
                                        <option value="false">Cá nhân</option>
                                        <option value="true"> Công ty</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group col-6">
                                <label class="control-label">Mã thuế</label>
                                <div class="input-group">
                                    <span class="input-group-text span-input-primary" id="basic-addon1"><i class="bi bi-upc-scan"></i></span>
                                    <input type="text" class="form-control" name="tax">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Địa chỉ</label>
                            <div class="input-group">
                                <span class="input-group-text span-input-primary" id="basic-addon1"><i class="bi bi-building-fill"></i></span>
                                <input type="text" class="form-control" name="address">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Ghi chú</label>
                            <div class="input-group">
                                <span class="input-group-text span-input-primary" id="basic-addon1"><i class="bi bi-card-text"></i></span>
                                <textarea type="text" class="form-control" name="note"></textarea>
                            </div>
                        </div>
                        <div class="text-center mt-4">
                            <button id="btnSubmit" class="btn btn-primary me-2" type="submit">Thêm</button>
                            <button class="btn btn-outline-primary" type="button" onclick="modal('insert-modal', 0, 'scale(0)')">Đóng</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    @*end insert model*@
    <div class="mt-4">
        <form id="customerListForm" method="get" asp-page="./Index" style="margin-bottom: 20px; ">
            <div class="d-flex">
                <h3 class="col-2 me-4">Khách hàng</h3>
                <div class="form-group flex-grow-1 me-4">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" asp-for="@Model.textSearch" placeholder="Nhập tên khách hàng, số điện thoại, email, mã thuế" aria-label="Recipient's username" aria-describedby="basic-addon2">
                        <button class="input-group-text btn-primary" type="submit"><i class="bi bi-search"></i></button>
                    </div>
                </div>
                <div class="form-group me-4">
                    <a class="btn btn-primary" onclick="modal('insert-modal', 0, 'scale(1)');">
                        <i class="bi bi-person-plus-fill" asp-page="Create"></i> Thêm khách hàng
                    </a>
                </div>
                <div class="form-group me-4">
                    <button class="btn btn-primary" type="button" onclick="modal('upload-products-modal', 3, 'scale(1)');">
                        <i class="bi bi-upload"></i> Tải lên Excel
                    </button>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">
                        <a style="text-decoration: none; color: white" asp-page="./ExportProducts">
                            <i class="bi bi-download"></i> Tải xuống Excel
                        </a>
                    </button>
                </div>
            </div>

            @*end filter*@
            @*@if (Model.message != null)
            {
            <div id="notification" class="alert alert-danger">@Model.message</div>
            }
            @if (Model.successMessage != null)
            {
            <div id="notificationSuccess" class="alert alert-success">@Model.successMessage</div>
            }*@
            <div class="d-flex">
                <div class="d-flex flex-column col-2 me-4">
                    <div class="form-group col-6 mx-auto mb-3">
                        <select id="option-primary" class="form-select" asp-for="@Model.pageSize" onchange="this.form.submit()">
                            <option value="5"> 5 hàng</option>
                            <option value="10">10 hàng</option>
                            <option value="15">15 hàng</option>
                            <option value="20">20 hàng</option>
                        </select>
                    </div>
                    <div class="row form-container py-4 mb-3">
                        <div class="m-auto">
                            <div>
                                <h6>Sinh nhật</h6>
                                <hr />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Từ</label>
                                <div class="input-group">
                                    <span class="input-group-text span-input-primary" id="basic-addon1"><i class="bi bi-calendar-minus-fill"></i></span>
                                    <input asp-for="@Model.dateFrom" type="date" class="form-control" id="dateFrom">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Đến</label>
                                <div class="input-group">
                                    <span class="input-group-text span-input-primary" id="basic-addon1"><i class="bi bi-calendar-plus-fill"></i></span>
                                    <input asp-for="@Model.dateTo" type="date" class="form-control" id="dateTo">
                                </div>
                            </div>
                            <div class="text-center mt-4">
                                <button class="btn btn-primary" type="button" onclick="validateForSubmit();">Lọc</button>
                            </div>
                        </div>
                    </div>
                    <div class="row form-container py-4 mb-3">
                        <div class="m-auto">
                            <div>
                                <h6>Phân loại</h6>
                                <hr />
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" onclick="this.form.submit()" asp-for="@Model.typeCustomer" asp-checked="@Model.typeCustomer=='all'" type="radio" value="all" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Tất cả
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" onclick="this.form.submit()" asp-for="@Model.typeCustomer" asp-checked="@Model.typeCustomer=='false'" type="radio" value="false">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Cá nhân
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" onclick="this.form.submit()" asp-for="@Model.typeCustomer" asp-checked="@Model.typeCustomer=='true'" type="radio" value="true">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Công ty
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row form-container py-4">
                        <div class="m-auto">
                            <div>
                                <h6>Trạng thái</h6>
                                <hr />
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" onclick="this.form.submit()" asp-for="@Model.status" asp-checked="@Model.status=='all'" type="radio" value="all" id="CheckDefault">
                                <label class="form-check-label" for="CheckDefault">
                                    Tất cả
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" onclick="this.form.submit()" asp-for="@Model.status" asp-checked="@Model.status=='true'" type="radio" value="true">
                                <label class="form-check-label" for="CheckDefault">
                                    Kích hoạt
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" onclick="this.form.submit()" asp-for="@Model.status" asp-checked="@Model.status=='false'" type="radio" value="false">
                                <label class="form-check-label" for="CheckDefault">
                                    Vô hiệu hoá
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                @if (Model.TotalCount > 0)
                {
                    <div class="flex-grow-1 form-container px-3">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th class="tbProductName">
                                        Tên khách hàng
                                    </th>
                                    <th class="tbImportPrice">
                                        Ngày sinh
                                    </th>
                                    <th class="tbImportPrice">
                                        Điện thoại
                                    </th>
                                    <th class="tbImportPrice">
                                        Phân loại
                                    </th>
                                    <th class="tbImportPrice">
                                        Email
                                    </th>
                                    <th class="tbImportPrice">
                                        Mã thuế
                                    </th>
                                    <th class="tbImportPrice">
                                        Trạng thái
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Customers)
                                {
                                    <tr>
                                        <td class="tbProductName">
                                            @Html.DisplayFor(modelItem => item.CustomerName)
                                        </td>
                                        <td class="tbImportPrice">
                                            @Html.DisplayFor(modelItem => item.Dob.ToString("dd/MM/yyyy"))
                                        </td>
                                        <td class="tbImportPrice">
                                            @Html.DisplayFor(modelItem => item.Phone)
                                        </td>
                                        @if (item.TypeOfCustomer == true)
                                        {
                                            <td class="tbImportPrice">
                                                Công ty
                                            </td>
                                        }
                                        else
                                        {
                                            <td class="tbImportPrice">
                                                Cá nhân
                                            </td>
                                        }
                                        <td class="tbImportPrice">
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td class="tbImportPrice">
                                            @Html.DisplayFor(modelItem => item.TaxCode)
                                        </td>
                                       @if (item.Active == true)
                                        {
                                            <td class="tbImportPrice">
                                                Kích hoạt
                                            </td>
                                        }
                                        else
                                        {
                                            <td class="tbImportPrice">
                                                Vô hiệu hoá
                                            </td>
                                        }
                                        <td>
                                            <a onclick="getProductDetail(@(item.CustomerId))">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                                    <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                                                </svg>
                                            </a>
                                            ||<a asp-page="./Delete" asp-route-productID="@item.CustomerId">Chi tiết</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="d-flex mt-5">
                            <div class="pagination m-auto">
                                <ul class="pagination">
                                    @if (Model.pageIndex > 1)
                                    {
                                        <li class="page-item"><a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.pageIndex - 1)" asp-route-pageSize="@Model.pageSize" asp-route-textSearch="@Model.textSearch" asp-route-dateFrom="@Model.dateFrom" asp-route-dateTo="@Model.dateTo" asp-route-typeCustomer="@Model.typeCustomer" asp-route-status="@Model.status">Trước</a></li>
                                    }
                                    @for (int i = 1; i <= Math.Ceiling(Model.TotalCount / (double)Model.pageSize); i++)
                                    {
                                        <li class="page-item @(Model.pageIndex == i ? "active" : "")"><a class="page-link" asp-page="./Index" asp-route-pageIndex="@i" asp-route-pageSize="@Model.pageSize" asp-route-textSearch="@Model.textSearch" asp-route-dateFrom="@Model.dateFrom" asp-route-dateTo="@Model.dateTo" asp-route-typeCustomer="@Model.typeCustomer" asp-route-status="@Model.status">@i</a></li>
                                    }
                                    @if (Model.pageIndex < Math.Ceiling(Model.TotalCount / (double)Model.pageSize))
                                    {
                                        <li class="page-item"><a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.pageIndex + 1)" asp-route-pageSize="@Model.pageSize" asp-route-textSearch="@Model.textSearch" asp-route-dateFrom="@Model.dateFrom" asp-route-dateTo="@Model.dateTo" asp-route-typeCustomer="@Model.typeCustomer" asp-route-status="@Model.status">Sau</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="flex-grow-1 d-flex align-items-center form-container">
                        <h5 class="m-auto">Không có khách hàng nào phù hợp</h5>
                    </div>
                }
            </div>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.12.0/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.0/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function validateForSubmit() {
            const dateFrom = $('#dateFrom').val();
            const dateTo = $('#dateTo').val();


            // Kiểm tra xem giá trị ngày đã nhập đủ 4 số cho phần năm hay chưa
            if (!(dateFrom.length === 10 && dateFrom.charAt(4) === '-' && dateFrom.charAt(7) === '-')) {
                alert("Chưa nhập đủ ngày bắt đầu!")
            } else if (!(dateTo.length === 10 && dateTo.charAt(4) === '-' && dateTo.charAt(7) === '-')) {
                alert("Chưa nhập đủ ngày kết thúc!")
                //toastMessage.showToastError('Lỗi', 'Người dùng chưa nhập đủ 4 số cho phần năm!', 1000)
            }
            else if (Date.parse(dateFrom) > Date.parse(dateTo)) {
                alert("Ngày bắt đầu lớn hơn ngày kết thúc!")
            }
            else {
                $('#customerListForm').submit()
            }
        }
    </script>
</body>
