@page
@model Waho.Pages.RegisterModel
@{
}

<div class="row d-flex">
    <div class="col-md-4 mx-auto form-container">
        <div class="pb-4 px-3">
            <h4 class="mt-5">Đăng ký </h4>
            <hr />
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" />
                <div class="form-group">
                    <label asp-for="Employee.UserName" class="control-label"></label>
                    <input asp-for="Employee.UserName" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Employee.Password" class="control-label"></label>
                    <input type="password" asp-for="Employee.Password" class="form-control" />
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Đăng nhập" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
